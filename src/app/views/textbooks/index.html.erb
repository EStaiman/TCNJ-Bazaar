<p id="notice"><%= notice %></p>
<div style="text-align: center">
<h1>Textbooks</h1>

<table style = "margin-left: auto; margin-right: auto">
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Edition</th>
      <th>Condition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @textbooks.each do |textbook| %>
      <tr>
        <td><%= textbook.name %></td>
	<td><%= textbook.author %></td>
        <td><%= textbook.edition %></td>
        <td><%= textbook.condition %></td>
        <td><%= link_to 'Show', textbook %></td>
        <td><%= link_to 'Edit', edit_textbook_path(textbook) %></td>
        <td><%= link_to 'Destroy', textbook, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
<# %= link_to 'New Textbook', new_textbook_path %>
